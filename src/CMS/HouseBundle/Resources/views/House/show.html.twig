{% extends '::cms/cms_template.html.twig' %}

{% block crud_block %}
    <h1 class="title">
        <i class="fa fa-tag"></i>
        House ""
        <a class="btn btn-primary" href="{{ path('cms_estabelecimentos_new') }}"> Adicionar novo </a>
    </h1>

    <section class="panel">
        <div class="panel-body">
            <div class="position-left">
                <table class="table table-striped">
                    <tbody>
                            <tr>
                                <th class="col-sm-2">Id</th>
                                <td class="col-sm-10">{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Name</th>
                                <td class="col-sm-10">{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Description</th>
                                <td class="col-sm-10">{{ entity.description }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Paymentmethod</th>
                                <td class="col-sm-10">{{ entity.paymentMethod }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Physicalspace</th>
                                <td class="col-sm-10">{{ entity.physicalSpace }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Parkingprice</th>
                                <td class="col-sm-10">{{ entity.parkingPrice }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Housemap</th>
                                <td class="col-sm-10">{{ entity.houseMap }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Additionalservices</th>
                                <td class="col-sm-10">{{ entity.additionalServices }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Email</th>
                                <td class="col-sm-10">{{ entity.email }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Workinghours</th>
                                <td class="col-sm-10">{{ entity.workingHours }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Isactive</th>
                                <td class="col-sm-10">{{ entity.isActive }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Createdat</th>
                                <td class="col-sm-10">{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Updatedat</th>
                                <td class="col-sm-10">{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Slug</th>
                                <td class="col-sm-10">{{ entity.slug }}</td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

        <ul class="record_actions">
    <li>
        <a class="btn btn-default" href="{{ path('cms_estabelecimentos') }}">
            Voltar para a lista
        </a>
    </li>
    <li>
        <a class="btn btn-primary" href="{{ path('cms_estabelecimentos_new') }}">
            Adicionar novo
        </a>
    </li>
    <li>
        <a class="btn btn-info" href="{{ path('cms_estabelecimentos_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <a class="btn btn-danger delete" href="{{ path('cms_estabelecimentos_delete', { 'id': entity.id }) }}">
            Excluir
        </a>
    </li>
</ul>
{% endblock %}
