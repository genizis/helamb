{% extends '::cms/cms_template.html.twig' %}

{% block crud_block %}
    <h1 class="title">
        <i class="fa fa-tag"></i>
        Listando Page 
        <a class="btn btn-primary" href="{{ path('cms_pages_new') }}"> Adicionar novo </a>
    </h1>

    <section class="panel">
            <div class="panel-body">
            <div class="adv-table">
            <form action="{{ path('cms_pages_delete_all') }}" id="listform" method="post">
                <table  class="display table table-bordered table-striped" id="dynamic-table">
                    <thead>
                        <tr>
                            <th class="sorting_disabled" style="text-align: center;"><input type="checkbox" class="check-all"></th>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Slug</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Isactive</th>
                                <th>Created</th>
                                <th>Updated</th>
                            <th class="col-sm-2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td style="text-align: center;"><input type="checkbox" class="record-check" name="records[]" value="{{ entity.id }}"></td>
                                <td><a href="{{ path('cms_pages_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.title }}</td>
                                <td>{{ entity.slug }}</td>
                                <td>{{ entity.description }}</td>
                                <td>{{ entity.image }}</td>
                                <td>{{ entity.isActive }}</td>
                                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td><a href="{{ path('cms_pages_show', { 'id': entity.id }) }}" class="btn btn-white">
    <i class="fa fa-eye"></i>
</a>

<a href="{{ path('cms_pages_edit', { 'id': entity.id }) }}" class="btn btn-white">
    <i class="fa fa-pencil-square"></i>
</a>

<a href="{{ path('cms_pages_delete', { 'id': entity.id }) }}" class="btn btn-white delete">
    <i class="fa fa-trash-o"></i>
</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </form>
            </div>
            </div>
        </section>

        <ul class="record_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('cms_pages_new') }}">
                Adicionar novo
            </a>
        </li>
        <li>
            <a class="btn btn-danger delete-all" href="#">
                Excluir registros selecionados
            </a>
        </li>
    </ul>
    {% endblock %}
