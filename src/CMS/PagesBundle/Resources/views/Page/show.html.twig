{% extends '::cms/cms_template.html.twig' %}

{% block crud_block %}
    <h1 class="title">
        <i class="fa fa-tag"></i>
        Page ""
        <a class="btn btn-primary" href="{{ path('cms_pages_new') }}"> Adicionar novo </a>
    </h1>

    <section class="panel">
        <div class="panel-body">
            <div class="position-left">
                <table class="table table-striped">
                    <tbody>
                            <tr>
                                <th class="col-sm-2">Id</th>
                                <td class="col-sm-10">{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Title</th>
                                <td class="col-sm-10">{{ entity.title }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Slug</th>
                                <td class="col-sm-10">{{ entity.slug }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Description</th>
                                <td class="col-sm-10">{{ entity.description }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Image</th>
                                <td class="col-sm-10">{{ entity.image }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Isactive</th>
                                <td class="col-sm-10">{{ entity.isActive }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Created</th>
                                <td class="col-sm-10">{{ entity.created|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-2">Updated</th>
                                <td class="col-sm-10">{{ entity.updated|date('Y-m-d H:i:s') }}</td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

        <ul class="record_actions">
    <li>
        <a class="btn btn-default" href="{{ path('cms_pages') }}">
            Voltar para a lista
        </a>
    </li>
    <li>
        <a class="btn btn-primary" href="{{ path('cms_pages_new') }}">
            Adicionar novo
        </a>
    </li>
    <li>
        <a class="btn btn-info" href="{{ path('cms_pages_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <a class="btn btn-danger delete" href="{{ path('cms_pages_delete', { 'id': entity.id }) }}">
            Excluir
        </a>
    </li>
</ul>
{% endblock %}
